<view class="fun-form-input {{disabled?'fun-form-input-disable':''}}">
    <text class="required-sign" wx:if="{{!disabled&&!notRequired}}">*</text>
    <text class="required-sign-blank" wx:if="{{disabled}}"></text>
    <text class="left">{{label}}</text>
    <view class="right">
        <input bindblur="handleBlur" bindconfirm="handleConfirm" bindfocus="handleFocus" bindinput="handleInput" class="fun-form-input-value" disabled="{{disabled}}" focus="{{focus}}" maxlength="{{maxlength}}" password="{{password}}" placeholder="{{placeholder}}" placeholderStyle="color: #777; font-size: 26rpx; font-weight: 400; line-height: 37rpx;" type="{{type}}" value="{{inputValue}}"></input>
        <icon bindtouchstart="handleClear" class="fun-form-input-clear" size="14" type="clear" wx:if="{{showClear}}"></icon>
    </view>
</view>
