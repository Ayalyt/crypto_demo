<view class="fun-form-select">
    <view bindtap="handleShow" class="fun-form-item">
        <text class="fun-form-item-required" wx:if="{{required}}">*</text>
        <text class="fun-form-item-label" wx:if="{{label}}">{{label}}</text>
        <text class="fun-form-item-value" wx:if="{{value}}">{{value}}</text>
        <text class="fun-form-item-placeholder" wx:if="{{!value}}">{{placeholder}}</text>
        <text class="fun-form-item-icon fun-icon fun-icon-angle-down"></text>
    </view>
    <fun-drawer bind:close="handleDrawerClose" show="{{show&&!isConfirm}}">
        <view class="fun-form-select-header">
            <text bindtap="handleClose" class="fun-form-select-close fun-icon fun-icon-close"></text>
            <text>{{title}}</text>
            <text bindtap="handleConfirm" class="fun-form-select-confirm fun-icon fun-icon-right"></text>
        </view>
        <picker-view bindchange="handleChange" bindpickend="handleEnd" bindpickstart="handleStart" class="fun-form-select-items" indicatorStyle="height: 50px;" value="{{selectedIndex}}" wx:if="{{show}}">
            <picker-view-column wx:for="{{innerItems}}" wx:for-item="options" wx:key="index">
                <view class="fun-form-select-item" data-value="{{item[valueKey]}}" wx:for="{{options}}" wx:key="index">{{item[textKey]}}</view>
            </picker-view-column>
        </picker-view>
    </fun-drawer>
</view>
