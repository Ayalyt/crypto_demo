.fun-form-select {
    background: #fff
}

.fun-form-select-header {
    background: #f8f8f8;
    border-bottom: 1rpx solid #efefef;
    color: #949aa7;
    font-size: 32rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center
}

.fun-form-select-close,.fun-form-select-confirm {
    height: 90rpx;
    line-height: 90rpx;
    position: absolute;
    top: 0;
    width: 90rpx
}

.fun-form-select-close {
    left: 0
}

.fun-form-select-confirm {
    color: #e0ae01;
    font-size: 42rpx;
    right: 0
}

.fun-form-select-items {
    height: 600rpx;
    width: 100%
}

.fun-form-select-item {
    line-height: 50px;
    text-align: center
}

.fun-form-item {
    -webkit-align-items: center;
    align-items: center;
    border-bottom: 1rpx solid #f2f2f2;
    color: #333;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    font-size: 30rpx;
    line-height: 142rpx;
    margin: 0 40rpx
}

.fun-form-item-label {
    min-width: 112rpx;
    padding-right: 50rpx;
    text-align: left;
    white-space: nowrap
}

.fun-form-item-required {
    color: #f15d61;
    padding-right: 6rpx;
    text-align: center
}

.fun-form-item-value {
    color: #333;
    -webkit-flex: 1;
    flex: 1;
    font-weight: 400;
    height: 100%;
    text-overflow: ellipsis;
    vertical-align: center;
    width: 100%
}

.fun-form-item-placeholder {
    color: #777;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 37rpx;
    width: 100%
}

.fun-form-item-icon {
    color: #afb2bb;
    font-size: 22rpx
}
