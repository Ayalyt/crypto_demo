<view ariaModal="true" ariaRole="dialog" class="weui-dialog__root {{innerShow?'weui-animate-fade-in':'weui-animate-fade-out'}}" wx:if="{{wrapperShow}}">
    <view ariaLabel="关闭" ariaRole="button" bindtap="close" class="weui-mask" wx:if="{{mask}}"></view>
    <view bindtap="close" class="weui-dialog__wrp {{extClass}}">
        <view catchtap="stopEvent" class="weui-dialog">
            <view class="weui-dialog__hd">
                <view class="weui-dialog__title" tabindex="0">{{title}}<slot name="title"></slot>
                </view>
            </view>
            <view class="weui-dialog__bd">
                <slot></slot>
            </view>
            <view class="weui-dialog__ft">
                <block wx:if="{{buttons&&buttons.length}}">
                    <view ariaRole="button" bindtap="buttonTap" class="weui-dialog__btn {{item.className}} {{item.extClass}}" data-index="{{index}}" hoverClass="weui-active" wx:for="{{buttons}}" wx:key="index">{{item.text}}</view>
                </block>
                <slot name="footer" wx:else></slot>
            </view>
        </view>
    </view>
</view>
