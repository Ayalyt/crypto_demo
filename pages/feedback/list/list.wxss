page {
    background: #f4f4f4
}

.container {
    padding-bottom: 106rpx
}

.feedback-wrap {
    background: #fff;
    margin-bottom: 18rpx;
    padding: 40rpx 30rpx 50rpx 97rpx;
    position: relative
}

.avatar {
    height: 60rpx;
    left: 20rpx;
    position: absolute;
    top: 40rpx;
    width: 60rpx
}

.question-edit {
    color: #e0ae01;
    font-size: 32rpx;
    position: absolute;
    right: 44rpx;
    top: 55rpx
}

.question-author {
    font-weight: 700
}

.question-type {
    border: 1rpx solid #c6cbd7;
    border-radius: 18rpx;
    color: #949aa7;
    font-size: 22rpx;
    margin-left: 20rpx;
    padding: 0 15rpx
}

.question-time {
    color: #828999;
    font-size: 22rpx
}

.question-content {
    font-size: 26rpx;
    margin-top: 12rpx
}

.question-img {
    border-radius: 6rpx;
    height: 125rpx;
    margin-right: 3%;
    margin-top: 20rpx;
    vertical-align: top;
    width: 31%
}

.question-img:nth-child(3n) {
    margin-right: 0
}

.question-site {
    color: #828999;
    font-size: 22rpx;
    line-height: 28rpx;
    margin-top: 26rpx
}

.question-site-icon {
    height: 24rpx;
    margin-right: 6rpx;
    margin-top: 3rpx;
    vertical-align: top;
    width: 24rpx
}

.reply-wrap {
    margin-top: 25rpx
}

.reply-info {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex
}

.reply-slogan {
    background: #ffdf83;
    border-radius: 50%;
    color: #795600;
    font-size: 22rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-right: 12rpx;
    text-align: center;
    width: 60rpx
}

.reply-replier {
    font-weight: 700
}

.reply-time {
    color: #828999;
    font-size: 22rpx
}

.reply-content {
    font-size: 26rpx;
    margin-top: 10rpx
}

.create-wrap {
    background: #fff;
    bottom: 0;
    box-shadow: 0 -4px 8px 0 rgba(0,0,0,.05);
    box-sizing: border-box;
    padding-bottom: calc(env(safe-area-inset-bottom) / 2);
    position: fixed;
    text-align: right;
    width: 100%
}

.create-btn {
    display: inline-block;
    font-size: 30rpx;
    height: 78rpx;
    margin: 15rpx 20rpx 15rpx 0;
    padding: 0 50rpx;
    vertical-align: top
}
