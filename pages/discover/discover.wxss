@import "..\template\no-more\index.wxss";

.flex {
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: space-between;
    justify-content: space-between
}

.fall-container,.flex {
    display: -webkit-flex;
    display: flex
}

.fall-container {
    width: 100%
}

.fall-left,.fall-right {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column
}

.fall-right {
    margin-left: 20rpx
}

.card-wrp {
    border-radius: 12rpx;
    box-shadow: 0 0 10rpx #ccc;
    margin-bottom: 20rpx;
    overflow: hidden;
    width: 326rpx
}

.card-img {
    width: 100%
}

.card-desc {
    font-size: 22rpx;
    padding: 10rpx 15rpx
}

.card-desc-title {
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis
}

.card-desc-footer {
    color: #777;
    margin: 15rpx auto
}

.card-desc-footer__avatar {
    border-radius: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
    width: 50rpx
}

.card-desc-footer__nickname {
    max-width: 112rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: keep-all
}

.card-desc-footer__likecount,.card-desc-footer__viewcount {
    -webkit-align-items: center;
    align-items: center;
    color: #777;
    display: -webkit-flex;
    display: flex;
    margin-right: 10rpx
}

.card-desc-footer__likecount .icon,.card-desc-footer__viewcount .icon {
    height: 26rpx;
    margin-right: 5rpx;
    width: 26rpx
}

.container {
    padding: 20rpx 40rpx calc(55px + env(safe-area-inset-bottom))
}

.header-wrp {
    -webkit-justify-content: space-between;
    justify-content: space-between
}

.header,.header-wrp {
    display: -webkit-flex;
    display: flex
}

.header {
    -webkit-align-items: center;
    align-items: center;
    margin-bottom: 20rpx
}

.header-left {
    -webkit-flex: 1;
    flex: 1
}

.header-left-title {
    color: #222;
    font-size: 36rpx;
    font-weight: 500
}

.header-left-desc {
    color: #777;
    font-size: 24rpx
}

.arrow-right {
    height: 20rpx;
    width: 20rpx
}

.arrow-right.none {
    display: none
}

.descover-page .swiper {
    border-radius: 12rpx;
    box-shadow: 0 0 30rpx #ccc;
    height: 490rpx;
    margin-bottom: 30rpx;
    overflow: hidden
}

.descover-page .swiper-item {
    margin-right: 20px
}

.banner-wrp {
    height: 100%;
    position: relative
}

.banner {
    height: 377rpx;
    width: 100%
}

.banner-desc {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    padding: 15rpx 20rpx
}

.banner-desc-left {
    -webkit-flex: 1;
    flex: 1;
    line-height: 1.8;
    overflow: hidden
}

.banner-desc-left__title {
    color: #222;
    font-size: 26rpx
}

.banner-desc-left__datetime {
    color: #777;
    font-size: 22rpx
}

.banner-wrp .city {
    -webkit-align-items: center;
    align-items: center;
    background-color: rgba(0,0,0,.4);
    border-radius: 60rpx;
    color: #fff;
    display: -webkit-flex;
    display: flex;
    font-size: 22rpx;
    left: 20rpx;
    overflow: hidden;
    padding: 0 20rpx;
    position: absolute;
    text-overflow: ellipsis;
    top: 310rpx;
    white-space: nowrap;
    word-break: keep-all
}

.banner-wrp .status {
    font-size: 20rpx;
    line-height: 1.3;
    position: absolute;
    right: 38rpx;
    text-align: center;
    top: 10rpx;
    width: 44rpx;
    word-break: break-all;
    z-index: 1
}

.banner-wrp .status.status-v {
    line-height: 1.2;
    right: 50rpx;
    top: 5rpx;
    width: 20rpx
}

.banner-wrp .status-bg {
    height: 100rpx;
    position: absolute;
    right: 20rpx;
    top: 0;
    width: 80rpx;
    z-index: 0
}

.important {
    font-size: 36rpx;
    margin-right: 8rpx;
    position: relative;
    top: 8rpx
}

.banner-desc-right {
    background: #212721;
    color: #ffda71;
    font-size: 22rpx
}

.btn-publish {
    border-radius: 90rpx;
    color: #fff;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    width: 90rpx
}
