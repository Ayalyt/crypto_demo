.contract-book {
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: left;
    justify-content: left;
    padding: 30rpx
}

.zfht {
    background: #fff;
    border: 1px solid #ededed;
    border-radius: 6px;
    box-shadow: 0 18px 26px 0 hsla(0,0%,87%,.5);
    margin-right: 20rpx;
    width: 216rpx
}

.zfht:last-child {
    margin-right: 0
}

.zfht-content {
    padding: 50rpx;
    text-align: center
}

.zfht-img {
    display: inline-block;
    height: 60rpx;
    margin-bottom: 10rpx;
    width: 60rpx
}

.zfht-text {
    color: #333;
    display: inline-block;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx
}
