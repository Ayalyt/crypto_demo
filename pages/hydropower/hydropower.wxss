page {
    background: #f1f1f1;
    height: 100%
}

.balance-tip {
    box-sizing: border-box;
    height: 74rpx;
    line-height: 74rpx;
    padding: 0 14px
}

.cell {
    background: #fff;
    padding: 22rpx 30rpx 36rpx
}

.cell-top-view {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-between;
    justify-content: space-between
}

.cell-top-view-date {
    color: #333
}

.cell-top-view-date,.cell-top-view-price {
    font-family: PingFangSC;
    font-size: 30rpx;
    font-weight: 500
}

.cell-top-view-price {
    color: #e0ae01
}

.cell-electric {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    margin-top: 18rpx
}

.cell-electric-item {
    color: #333;
    font-family: PingFangSC;
    font-size: 28rpx;
    font-weight: 400;
    margin-left: 10rpx;
    width: 50%
}

.cell-electric-item.al-right {
    text-align: right
}

.cell-electric-image {
    height: 14px;
    width: 14px
}

.hydropower-header {
    background: linear-gradient(270deg,#333,#2c2825);
    box-sizing: border-box;
    color: #fff;
    font-size: 24rpx;
    font-weight: 700;
    height: 88rpx;
    line-height: 88rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    width: 100%
}

.scroll-no-data {
    -webkit-align-content: center;
    align-content: center;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    -webkit-justify-content: center;
    justify-content: center
}

.balance-tip-right {
    float: right
}

.balance-tip-icon {
    height: 50rpx;
    margin-right: 6rpx;
    vertical-align: middle
}
