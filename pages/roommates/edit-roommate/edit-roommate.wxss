page {
    height: 100%
}

.edit-roommate-page {
    background: #f4f4f4;
    height: 100%
}

.edit-roommate-page .form-part {
    background-color: #fff
}

.edit-roommate-page .form-part .form-item {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    font-size: 28rpx;
    line-height: 100rpx;
    padding-left: 20rpx
}

.edit-roommate-page .form-part .form-item .required-sign {
    color: #f15d61;
    padding-right: 10rpx;
    text-align: center
}

.edit-roommate-page .form-part .form-item .left {
    min-width: 112rpx;
    white-space: nowrap
}

.edit-roommate-page .form-part .form-item .right {
    padding-left: 30rpx
}

.edit-roommate-page .prompt-part {
    background-color: #fff;
    margin-top: 36rpx;
    padding: 40rpx 40rpx 40rpx 60rpx
}

.edit-roommate-page .prompt-part .tips {
    font-size: 28rpx;
    font-weight: 400;
    padding: 10rpx 0
}

.edit-roommate-page .prompt-part .tips-info wx-text {
    color: #949aa7;
    display: inline-block;
    font-size: 26rpx;
    margin-top: 18rpx
}

.reserve {
    background-color: #ffdf83;
    border-radius: 50rpx;
    color: #795600;
    float: right;
    height: 78rpx;
    line-height: 78rpx
}

.order,.reserve {
    margin-right: 20rpx;
    text-align: center;
    width: 234rpx
}

.order {
    background-color: #fff;
    border: 1px solid #c6cbd7;
    border-radius: 50rpx;
    color: #949aa7;
    height: 76rpx;
    line-height: 76rpx
}

.no-line .form-item {
    border: none
}

.form-field {
    padding: 0 20rpx
}

.line-field {
    border-bottom: 1rpx solid #f2f2f2
}

.form-label {
    color: #333;
    display: inline-block;
    font-size: 30rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 11px;
    margin-right: 30rpx;
    min-width: 120rpx;
    text-align: justify;
    text-align-last: justify
}

.form-value {
    color: #828999
}

.disabled {
    background-color: #f9f9f9
}
