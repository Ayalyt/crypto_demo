.device-picker {
    background: #fff;
    border-bottom: 1rpx solid #eaeaea;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    line-height: 102rpx
}

.device-picker,.picker-wrap {
    display: -webkit-flex;
    display: flex
}

.picker-wrap {
    padding-left: 30rpx;
    width: 100%
}

.picker-wrap .label {
    min-width: 112rpx;
    white-space: nowrap
}

.required-sign {
    color: #f15d61;
    padding-right: 10rpx;
    text-align: center
}

.picker-wrap .placeholder {
    color: #828999;
    height: 102rpx;
    margin-left: 30rpx
}

.fun-icon {
    color: #afb2bb;
    font-size: 22rpx;
    line-height: inherit
}

.show-fun-modal {
    background: rgba(0,0,0,.5);
    bottom: 0;
    height: 100%;
    overflow: hidden;
    position: fixed;
    width: 100%;
    z-index: 1000
}

.show-fun-modal .fun-modal {
    background: #fff;
    bottom: 0;
    font-size: 32rpx;
    left: 0;
    min-height: 490rpx;
    position: fixed;
    width: 100%;
    z-index: 10
}

.show-fun-modal .fun-modal-header {
    -webkit-align-items: center;
    align-items: center;
    background-color: #f8f8f8;
    color: #949aa7;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    font-size: 28rpx;
    height: 90rpx;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    line-height: 90rpx;
    text-align: center;
    width: 100%
}

.show-fun-modal .fun-modal-header .header-left {
    box-sizing: border-box;
    float: left;
    height: 90rpx;
    line-height: 90rpx;
    padding-left: 30rpx;
    width: 90rpx
}

.show-fun-modal .fun-modal-header .header-left .error-img {
    height: 40rpx;
    width: 40rpx
}

.show-fun-modal .fun-modal-header .header-left .error-img wx-image {
    height: 100%;
    vertical-align: middle;
    width: 100%
}

.show-fun-modal .fun-modal-header .rent-explain {
    display: inline-block;
    -webkit-flex: 1;
    flex: 1;
    line-height: 90rpx
}

.show-fun-modal .fun-modal-header .header-right {
    box-sizing: border-box;
    float: right;
    height: 90rpx;
    padding-right: 30rpx;
    width: 90rpx
}

.show-fun-modal .fun-modal-header .header-right .good-img {
    height: 30rpx;
    width: 30rpx
}

.show-fun-modal .fun-modal-header .header-right .good-img wx-image,.show-fun-modal .mask {
    height: 100%;
    width: 100%
}

.show-fun-modal .mask {
    background-color: rgba(0,0,0,.5);
    opacity: 0;
    -webkit-transition: opacity .25s linear;
    -o-transition: opacity .25s linear;
    transition: opacity .25s linear
}

.picker-container {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column
}

.picker-container .picker-view {
    height: 84rpx;
    line-height: 84rpx;
    width: 100%
}

.free-radios {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-justify-content: center;
    justify-content: center
}

.device {
    border-left: 1px solid #efefef;
    border-top: 1px solid #efefef;
    box-sizing: border-box;
    color: #333;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    font-weight: 400;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    width: 25%
}

.first_row {
    border-top: 0
}

.first_col {
    border-left: 0
}

.selected {
    background: #efefef
}

wx-radio-group wx-label wx-radio {
    display: none;
    width: 100%;
    z-index: 3
}

.checked {
    background: #48c23d;
    color: #fff
}

wx-radio-group wx-label .free-text {
    display: inline-block;
    text-align: center;
    width: 100%
}
