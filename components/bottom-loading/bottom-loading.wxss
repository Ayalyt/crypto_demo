.bottom-loading {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    height: 80rpx;
    -webkit-justify-content: center;
    justify-content: center
}

.bottom-loading.none {
    display: none
}

.bottom-loading-item {
    background-color: #333;
    border-radius: 50rpx;
    height: 6rpx;
    margin: 0 6rpx;
    transition-duration: .25s;
    width: 6rpx
}

.bottom-loading-item:first-child {
    -webkit-animation: animate .5s ease infinite;
    animation: animate .5s ease infinite
}

.bottom-loading-item:nth-child(2) {
    -webkit-animation: animate .8s linear infinite;
    animation: animate .8s linear infinite
}

.bottom-loading-item:last-child {
    -webkit-animation: animate 1.1s linear infinite;
    animation: animate 1.1s linear infinite
}

@-webkit-keyframes animate {
    0% {
        background-color: #000
    }

    25% {
        background-color: #fff
    }

    50% {
        background-color: #333
    }

    75% {
        background-color: #999
    }

    100% {
        background-color: #000
    }
}

@keyframes animate {
    0% {
        background-color: #000
    }

    25% {
        background-color: #fff
    }

    50% {
        background-color: #333
    }

    75% {
        background-color: #999
    }

    100% {
        background-color: #000
    }
}