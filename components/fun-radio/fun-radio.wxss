.fun-radio {
    -webkit-align-items: center;
    align-items: center;
    border-bottom: 1rpx solid #eaeaea;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    line-height: 100rpx
}

.form-item-label {
    color: #333;
    height: 100rpx;
    line-height: 100rpx;
    margin-right: 30rpx;
    min-width: 4em;
    text-align: justify
}

.form-item-label:after {
    content: "";
    display: inline-block;
    height: 0;
    visibility: hidden;
    width: 100%
}

.form-item-required {
    color: #f15d61
}

.radio-group {
    -webkit-flex: 1;
    flex: 1;
    text-align: right
}

.radio-group wx-label {
    position: relative
}

.radio-group wx-radio {
    opacity: 0;
    width: 45rpx
}

.radio-group .radio-icon {
    border: 1px solid #c9c9c9;
    border-radius: 50%;
    box-sizing: border-box;
    height: 34rpx;
    left: 10rpx;
    position: absolute;
    top: 5rpx;
    width: 34rpx
}

.radio-group .radio-checked .radio-icon {
    border-color: #e0ae01
}

.radio-group .radio-checked .radio-icon:after {
    background: #e0ae01;
    border-radius: 50%;
    content: "";
    height: 18rpx;
    left: 7rpx;
    position: absolute;
    top: 7rpx;
    width: 18rpx
}
