<view class="fun-radio">
    <text class="form-item-required" wx:if="{{required}}">*</text>
    <text class="form-item-label" wx:if="{{label}}">{{label}}</text>
    <radio-group bindchange="onChange" class="radio-group" value="">
        <label class="{{value==item[valueKey]?'radio-checked':''}}" wx:for="{{items}}" wx:key="{{index}}">
            <i class="radio-icon"></i>
            <radio value="{{item[valueKey]}}"></radio>{{item[textKey]}}</label>
    </radio-group>
</view>
