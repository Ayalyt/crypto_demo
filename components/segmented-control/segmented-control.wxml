<view class="swiper-tab">
    <view bindtap="swichNav" class="swiper-tab-list" id="{{index}}" style="width:{{itemWidth}}" wx:for="{{items}}" wx:key="index">
        <view class="tab_item">
            <view class="tab_item_content">
                <view class="tab_item_main">
                    <text class="tab_item_text {{current==index?'on':''}}">{{item}}</text>
                    <view class="tab_item_indicator" wx:if="{{current==index}}"></view>
                </view>
                <view class="bage-number" style="width:{{bageNumberArray[index]>99?27:18}}px;" wx:if="{{bageNumberArray[index]>0}}">{{bageNumberArray[index]>99?'99+':bageNumberArray[index]}}</view>
            </view>
        </view>
    </view>
</view>
