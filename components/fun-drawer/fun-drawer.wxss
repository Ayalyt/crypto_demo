.fun-drawer-content {
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    background-color: #fff;
    position: fixed;
    z-index: 100
}

.fun-drawer-left .fun-drawer-content {
    height: 100%;
    left: 0;
    top: 0;
    -webkit-transform: translate3d(-100%,0,0);
    transform: translate3d(-100%,0,0)
}

.fun-drawer-right .fun-drawer-content {
    height: 100%;
    right: 0;
    top: 0;
    -webkit-transform: translate3d(100%,0,0);
    transform: translate3d(100%,0,0)
}

.fun-drawer-top .fun-drawer-content {
    left: 0;
    top: 0;
    -webkit-transform: translate3d(0,-100%,0);
    transform: translate3d(0,-100%,0);
    width: 100%
}

.fun-drawer-bottom .fun-drawer-content {
    bottom: 0;
    left: 0;
    -webkit-transform: translate3d(0,100%,0);
    transform: translate3d(0,100%,0);
    width: 100%
}

.fun-drawer-show .fun-mask {
    -webkit-animation: fun-animate-fadein .3s ease forwards;
    animation: fun-animate-fadein .3s ease forwards
}

.fun-drawer-show.fun-drawer-left .fun-drawer-content {
    -webkit-animation: fun-animate-slideup-left .3s ease forwards;
    animation: fun-animate-slideup-left .3s ease forwards
}

.fun-drawer-show.fun-drawer-top .fun-drawer-content {
    -webkit-animation: fun-animate-slideup-bottom .3s ease forwards;
    animation: fun-animate-slideup-bottom .3s ease forwards
}

.fun-drawer-show.fun-drawer-right .fun-drawer-content {
    -webkit-animation: fun-animate-slideup-right .3s ease forwards;
    animation: fun-animate-slideup-right .3s ease forwards
}

.fun-drawer-show.fun-drawer-bottom .fun-drawer-content {
    -webkit-animation: fun-animate-slideup-bottom .3s ease forwards;
    animation: fun-animate-slideup-bottom .3s ease forwards
}

.fun-drawer-hiding .fun-mask {
    -webkit-animation: fun-animate-fadeout .3s ease forwards;
    animation: fun-animate-fadeout .3s ease forwards
}

.fun-drawer-hiding.fun-drawer-left .fun-drawer-content {
    -webkit-animation: fun-animate-slidedown-left .3s ease forwards;
    animation: fun-animate-slidedown-left .3s ease forwards
}

.fun-drawer-hiding.fun-drawer-top .fun-drawer-content {
    -webkit-animation: fun-animate-slidedown-bottom .3s ease forwards;
    animation: fun-animate-slidedown-bottom .3s ease forwards
}

.fun-drawer-hiding.fun-drawer-right .fun-drawer-content {
    -webkit-animation: fun-animate-slidedown-right .3s ease forwards;
    animation: fun-animate-slidedown-right .3s ease forwards
}

.fun-drawer-hiding.fun-drawer-bottom .fun-drawer-content {
    -webkit-animation: fun-animate-slidedown-bottom .3s ease forwards;
    animation: fun-animate-slidedown-bottom .3s ease forwards
}

.fun-drawer-hidden,.fun-drawer-init {
    display: none
}
