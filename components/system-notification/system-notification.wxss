.main-view {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: column;
    flex-direction: column;
    -webkit-justify-content: center;
    justify-content: center;
    left: 10%;
    position: fixed;
    top: 20%;
    width: 80%;
    z-index: 200
}

@-webkit-keyframes fun-animate-slideup-top {
    from {
        -webkit-transform: translate3d(0,-120%,0);
        transform: translate3d(0,-120%,0)
    }

    to {
        -webkit-transform: translate3d(0,0,0);
        transform: translate3d(0,0,0)
    }
}

@keyframes fun-animate-slideup-top {
    from {
        -webkit-transform: translate3d(0,-120%,0);
        transform: translate3d(0,-120%,0)
    }

    to {
        -webkit-transform: translate3d(0,0,0);
        transform: translate3d(0,0,0)
    }
}

@-webkit-keyframes fun-animate-slidedown-top {
    from {
        -webkit-transform: translate3d(0,0,0);
        transform: translate3d(0,0,0)
    }

    to {
        -webkit-transform: translate3d(0,-120%,0);
        transform: translate3d(0,-120%,0)
    }
}

@keyframes fun-animate-slidedown-top {
    from {
        -webkit-transform: translate3d(0,0,0);
        transform: translate3d(0,0,0)
    }

    to {
        -webkit-transform: translate3d(0,-120%,0);
        transform: translate3d(0,-120%,0)
    }
}

.main-view-show {
    -webkit-animation: fun-animate-slideup-top .3s ease forwards;
    animation: fun-animate-slideup-top .3s ease forwards
}

.main-view-hide {
    -webkit-animation: fun-animate-slidedown-top .3s ease forwards;
    animation: fun-animate-slidedown-top .3s ease forwards
}

.top-view {
    background: #fff;
    border-radius: 10rpx;
    width: 100%
}

.image-view {
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    overflow: hidden
}

.content {
    padding: 30rpx
}

.title {
    color: #333;
    font-size: 32rpx;
    font-weight: 400
}

.date {
    color: #949aa7;
    font-size: 25rpx;
    margin-top: 10rpx
}

.content-text {
    color: #333;
    font-size: 26rpx;
    margin-top: 6rpx
}

.button-view {
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: center;
    justify-content: center;
    margin-top: 20px;
    width: 100%
}

.button {
    background-color: #fac828;
    border-radius: 40rpx;
    box-shadow: 0 0 14px 11px rgba(0,0,0,.08);
    color: #333;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    width: 60%
}

.close-button {
    height: 80rpx;
    margin-top: 20px;
    width: 80rpx
}
