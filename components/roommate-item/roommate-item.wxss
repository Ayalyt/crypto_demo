.roommate-item-part {
    -webkit-align-items: center;
    align-items: center;
    border: 1px solid #eaeaea;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    padding: 38rpx 0;
    position: relative
}

.roommate-item-part .roommate-head {
    padding: 0 30rpx;
    position: relative
}

.roommate-item-part .name {
    background-color: #edd180;
    border-radius: 50%;
    color: #795600;
    display: inline-block;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    width: 100rpx
}

.sign {
    bottom: -5px;
    height: 30rpx;
    left: 16px;
    position: absolute;
    width: 96rpx
}

.sign wx-image {
    height: 100%;
    width: 100%
}

.roommate-item-part .main {
    display: -webkit-flex;
    display: flex;
    -webkit-flex: 1;
    flex: 1;
    -webkit-flex-direction: column;
    flex-direction: column;
    font-size: 28rpx
}

.roommate-item-part .main .phone {
    margin-bottom: 10rpx
}

.roommate-item-part .main .card-no {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap
}

.roommate-item-part .edit-btn {
    border: 1px solid #c6cbd7;
    border-radius: 100rpx;
    color: #949aa7;
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
    margin: 0 30rpx;
    text-align: center;
    width: 110rpx
}
