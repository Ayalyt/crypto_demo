.auth-info {
    padding-top: 104rpx
}

.auth-btn {
    background: #f0556c;
    border-radius: 10rpx;
    font-size: 32rpx;
    height: 84rpx;
    line-height: 84rpx;
    width: 454rpx
}

.none-border::after {
    border: none
}

.auth-title {
    color: #33373e;
    font-family: PingFangSC;
    font-size: 52rpx;
    font-weight: 600;
    height: 73rpx;
    line-height: 73rpx;
    margin-bottom: 20rpx;
    margin-left: 98rpx
}

.auth-desc {
    border-bottom: 1rpx solid #dde3ec;
    box-sizing: border-box;
    color: #8893a6;
    font-family: PingFangSC-Regular;
    margin-left: 75rpx;
    padding: 0 23rpx 60rpx;
    text-align: center;
    width: 600rpx
}

.auth-desc,.auth-label {
    font-size: 30rpx;
    font-weight: 400;
    line-height: 42rpx
}

.auth-label {
    color: #33373e;
    font-family: PingFangSC;
    height: 42rpx;
    margin-left: 98rpx;
    margin-top: 60rpx
}

.auth-content-box {
    color: #8893a6;
    font-family: PingFangSC;
    font-size: 28rpx;
    font-weight: 400;
    height: 40rpx;
    line-height: 40rpx;
    margin-left: 78rpx;
    margin-top: 20rpx
}

.auth-content-box,.deal-box {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row
}

.deal-btn {
    color: #2e8dff
}

.auth-dot {
    background: #8893a6;
    border-radius: 10rpx;
    height: 10px;
    margin-right: 10rpx;
    margin-top: 10rpx;
    width: 10px
}

.auth-btn-box {
    -webkit-align-items: center;
    align-items: center;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-direction: row;
    flex-direction: row;
    -webkit-justify-content: center;
    justify-content: center;
    margin-top: 72rpx;
    padding: 0 80rpx
}

.auth-reject-btn {
    background: #dde3ec;
    border-radius: 10rpx;
    color: #8893a6;
    font-size: 32rpx;
    height: 84rpx;
    line-height: 84rpx;
    margin-right: 20rpx;
    width: 280rpx
}

.auth-reject-btn,.invite-code {
    font-family: PingFangSC;
    font-weight: 400;
    text-align: center
}

.invite-code {
    color: #2e8dff;
    font-size: 28rpx;
    margin-top: 60rpx
}

.register-dialog {
    background: #fff;
    border-radius: 4rpx;
    bottom: 0;
    box-sizing: border-box;
    left: 0;
    padding: 30rpx 10rpx;
    position: fixed;
    right: 0;
    top: 0;
    width: 750rpx;
    z-index: 2000
}

.content {
    padding: 160rpx 45rpx 0
}

.content .rg-title {
    color: #989898;
    font-size: 28rpx;
    line-height: 40rpx
}

.content .input {
    background-color: #f0f1f5;
    border-radius: 4rpx;
    color: #333;
    font-size: 28rpx;
    height: 74rpx;
    line-height: 40rpx;
    margin: 12rpx 0rpx 69rpx;
    padding: 0rpx 17rpx;
    text-align: left;
    width: 606rpx
}

.content .content-btn {
    background-color: #f0f1f5;
    border: none;
    border-radius: 4rpx;
    color: #989898;
    font-size: 32rpx;
    height: 74rpx;
    line-height: 74rpx;
    width: 640rpx
}

.content .content-btn::after {
    border: none
}
